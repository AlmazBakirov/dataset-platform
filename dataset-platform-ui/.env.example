# Dataset Platform UI - environment template
# Copy to .env and adjust values if needed.

# Backend base URL
BACKEND_URL=http://localhost:8000

# 1 = use mock backend responses (no real backend required)
USE_MOCK=1

# Request timeout in seconds (HTTP client)
REQUEST_TIMEOUT_S=20

# Upload strategy:
# - mvp: backend accepts multipart files
# - presigned: UI uses presigned URLs then calls complete
UPLOAD_MODE=mvp
S3_ENDPOINT_URL=http://127.0.0.1:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_REGION=us-east-1
S3_BUCKET_IMAGES=images
S3_BUCKET_EXPORTS=exports
S3_PRESIGN_EXPIRES_S=600
UPLOAD_MODE=presigned
